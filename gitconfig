[user]
  email = dev@mupat.net
  name = Mupat
[push]
  default = simple
[alias]
  lg = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  cp = cherry-pick
  st = status -s
  cl = clone
  ci = commit
  co = checkout
  cod = checkout develop
  br = branch
  bra = branch --all
  df = diff
  dc = diff --cached
  a = add
  aa = add --all
  pu = push
  puu = push -u origin
  put = push origin
  pl = pull
  re = remote
  f = fetch
  fa = fetch --all
  m = merge
  mod = merge origin/develop
  mud = merge upstream/develop
  ce = config user.email
  cu = config user.name
  ta = tag -a
  t = tag
  tl = describe --tags
  rh = reset --hard
  cleanup = ! git branch --merged develop | egrep -v 'develop$' | xargs git branch -d
  alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[credential]
	helper = osxkeychain
